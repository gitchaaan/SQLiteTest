<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".SQLiteActivity">
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LIST"
            android:id="@+id/btn_select2"
            android:layout_toEndOf="@+id/btn_delete"
            android:width="70dp" android:background="#7DC87D" android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true" android:layout_alignParentStart="true"/>

    <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/listView2"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_above="@+id/btn_gps" android:layout_below="@+id/btn_delete2"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DELETE"
            android:id="@+id/btn_delete2"
            android:background="#FA8273"
            android:width="70dp" android:layout_below="@+id/btn_select2" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="START"
            android:id="@+id/btn_start2"
            android:layout_toStartOf="@+id/btn_stop" android:layout_above="@+id/btn_stop"
            android:layout_alignParentRight="true" android:layout_alignParentEnd="true" android:background="#7DC87D"
            android:width="70dp"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="STOP"
            android:id="@+id/btn_stop2"
            android:layout_below="@+id/btn_select2" android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" android:background="#FA8273" android:width="70dp"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GPS Activity"
            android:id="@+id/btn_gps" android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" android:background="#642832"
            android:textColor="#FFFFFF"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="データ\n表示"
            android:id="@+id/textView3" android:layout_alignParentTop="true" android:layout_toRightOf="@+id/btn_select2"
            android:layout_toEndOf="@+id/btn_select2"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="データ\n削除"
            android:id="@+id/textView4" android:layout_alignTop="@+id/btn_delete2"
            android:layout_toRightOf="@+id/btn_delete2" android:layout_toEndOf="@+id/btn_delete2"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="サービス\n開始"
            android:id="@+id/textView5" android:layout_alignParentTop="true" android:layout_toLeftOf="@+id/btn_start2"
            android:layout_toStartOf="@+id/btn_start2"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="サービス\n終了"
            android:id="@+id/textView8" android:layout_alignTop="@+id/btn_stop2"
            android:layout_toLeftOf="@+id/btn_stop2" android:layout_toStartOf="@+id/btn_stop2"/>
</RelativeLayout>